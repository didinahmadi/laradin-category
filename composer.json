{
    "name": "laradin/category",
    "description": "Reusable laravel compponent to make categorization simple",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Didin Ahmadi",
            "email": "didinonpqcms@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": ">=7.1"
    },
    "require-dev": {        
        "mockery/mockery": "~1.0",
        "phpunit/phpunit": "~7.4",
        "orchestra/testbench": "~3.7"
    },
    "autoload": {
        "psr-4": {
            "Laradin\\Category\\": "src/",
            "Laradin\\Category\\Database\\": "database/"
        },
        "files": [
            "src/helpers/Helper.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Laradin\\Category\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Laradin\\Category\\CategoryServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "php ./../../../vendor/bin/phpunit .",
        "configure-commit-template": "git config --add commit.template .gitmessage"
    }    
}